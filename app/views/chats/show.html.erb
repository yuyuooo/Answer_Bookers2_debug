<div class="container">
  <div class="row">
    <div class="col col-12">
      <h2><%= @user.name %>さんとのチャット</h2>
        <div class="message">
          <table class="table table-borderless">
            <thead>
              <tr>
                <th style="text-align: left; font-size: 20px;"><%= @user.name %></th>
                <th></th>
                <th style="text-align: right; font-size: 20px;"><%= current_user.name %></th>
              </tr>
            </thead>
            <div class="chats_index">
              <%= render "index", chats: @chats %>
            </div>
          </table>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 offset-3">
        <div class="errors">
          <%= render "layouts/errors", obj: @chat %>
        </div>
        <div class="message_form mt-5">
          <%= render "form", chat: @chat %>
        </div>
      </div>
    </div>
  </div>
